#!/bin/sh

FILE_CONFIG=$SNAP_COMMON/.pigpio.conf

crossbar=$(snapctl get crossbar)
realm=$(snapctl get realm)

if [ -z $crossbar ]; then
    crossbar=ws://localhost:8080/ws
fi

if [ -z $realm ]; then
    realm=realm1
fi

echo "[config]" > $FILE_CONFIG
echo "crossbar=$crossbar" >> $FILE_CONFIG
echo "realm=$realm" >> $FILE_CONFIG

chmod 600 $FILE_CONFIG
